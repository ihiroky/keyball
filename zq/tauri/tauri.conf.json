{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "zq",
  "version": "0.1.0",
  "identifier": "com.zq.hid.app",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "frontendDist": "./dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "ZQ - HID Logger",
        "width": 248,
        "height": 64,
        "alwaysOnTop": true,
        "decorations": false,
        "focus": false,
        "focusable": false,
        "transparent": true
      }
    ],
    "security": {
      "capabilities": [
        {
          "identifier": "zq-capability",
          "description": "ZQ capability used for all windows",
          "windows": ["*"],
          "permissions": [
            "core:event:allow-listen",
            "core:event:default",
            "core:window:allow-set-position",
            "core:window:default",
            "core:window:allow-start-dragging"
          ]
        }
      ]
    }
  }
}
